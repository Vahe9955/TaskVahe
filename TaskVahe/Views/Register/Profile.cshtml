﻿﻿@{

    <header>
        <h1>@ViewData["Title"]</h1>
        <div>
            <h1>
                Welocome To Your Profile @Model.FullName
            </h1>
            <div class="container mt-5">
                <div class="row">

                    <div class="col-md-8">
                        <!-- Profile Information -->
                        <h2>@Model.FullName</h2>
                        <p>Email: @Model.Email</p>
                        <p>Address: @Model.Address</p>
                        <p>PhoneNumber: @Model.PhoneNumber</p>

                        <!-- Social Media Links -->
                        <div class="mb-3">
                            <a href="#" class="btn btn-primary">Twitter</a>
                            <a href="#" class="btn btn-info">LinkedIn</a>
                            <a href="#" class="btn btn-dark">GitHub</a>
                        </div>

                        <!-- Bio -->
                        <p>Brief bio or description about yourself goes here.</p>
                    </div>
                </div>
            </div>


        </div>
        <div>
            <form id="account" action="/register/logout" method="post">
                <h2>Logout Here</h2>
                <div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Logout</button>
                </div>
            </form>
        </div>
    </header>
}
<script>
    var nav = document.getElementById("nav");
    nav.style("hidden");
</script>